<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TitleFont" parent="@android:style/TextAppearance.Medium">        
        <item name="android:layout_width">wrap_content</item>        
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item> 
        <item name="android:textColor">#404040</item>        
        <item name="android:textSize">18dip</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">10dip</item>
    </style>
    
    <style name="ADMImageButton">        
        <item name="android:padding">6dip</item>        
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>
    
    <style name="ImageButton">        
        <item name="android:padding">8dip</item>        
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item> 
    </style>
    
    <style name="TextContentLeft" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">fill_parent</item>        
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12dip</item>
        <item name="android:padding">6pt</item>
        <item name="android:textColor">#000000</item>
    </style>
    
    <style name="TextContentCenter" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">wrap_content</item>        
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12dip</item>
        <item name="android:paddingLeft">6pt</item>
        <item name="android:paddingRight">6pt</item>
        <item name="android:layout_gravity">center_horizontal</item> 
        <item name="android:textColor">#000000</item>
    </style>
	<style name="Table">
	    <item name="android:layout_width">fill_parent</item>
	    <item name="android:layout_height">wrap_content</item>
	    <item name="android:layout_gravity">center_horizontal</item>
  
	</style>
	<style name="TableRow">
    	<item name="android:weightSum">1.0</item>
  
	</style>
	<style name="TableCheck"> 
	    <item name="android:layout_column">1</item>
    	<item name="android:layout_width">wrap_content</item>
  		<item name="android:layout_height">wrap_content</item>
  		<item name="android:padding">3dip</item>
	</style>
	<style name="TableText"> 
    	<item name="android:layout_column">2</item>
    	<item name="android:layout_width">wrap_content</item>
  		<item name="android:layout_height">wrap_content</item>
  		<item name="android:padding">3dip</item>
  		<item name="android:textColor">#000000</item>
  		<item name="android:gravity">center</item>
	</style>
	<style name="TableEditText"> 
    	<item name="android:layout_width">wrap_content</item>
  		<item name="android:layout_height">wrap_content</item>
  		<item name="android:numeric">signed</item>
  		<item name="android:padding">3dip</item>
  		<item name="android:layout_weight">.50</item>
	</style>
	
</resources>